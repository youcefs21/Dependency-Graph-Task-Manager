// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator js {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Node {
  id        String  @id @default(cuid())
  userId    String  @default("root")
  user      User    @relation(fields: [userId], references: [id])
  goal      String  @default("insert goal here")
  archive   Boolean @default(false)
  x         Int     @default(0)
  y         Int     @default(0)
  out_edges Edge[]  @relation("outgoing")
  in_edges  Edge[]  @relation("incoming")
}

model Edge {
  id       String @id @default(cuid())
  node1_id String
  node2_id String
  node1    Node   @relation("outgoing", fields: [node1_id], references: [id])
  node2    Node   @relation("incoming", fields: [node2_id], references: [id])

  @@unique(fields: [node1_id, node2_id])
}

model Settings {
  userId      String  @id
  scale       Float   @default(20)
  x           Int     @default(0)
  y           Int     @default(0)
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  settings      Settings?
  nodes         Node[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
